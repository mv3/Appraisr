@model Appraisr.Models.Employee

@{
    ViewBag.Title = "Employee Detail";
}

@Html.Partial("_Message")

<h2>@Model.FirstName @Model.LastName</h2>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(e => e.FirstName)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.FirstName
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(e => e.LastName)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.LastName
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(e => e.PhoneCell)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.PhoneCell
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(e => e.OfficePhone)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.OfficePhone
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(e => e.Email)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Email
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(e => e.HireDate)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.HireDate.ToShortDateString()
            </div>
        </div>        
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(e => e.Office.OfficeName)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Office.OfficeName
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(e => e.Active)
            </div>
            <div class="col-xs-8 col-sm-8">
                @(Model.Active ? "Active" : "Inactive")
            </div>
        </div>
        @if (!Model.Active)
        {
            <div class="row">
                <div class="col-xs-4 col-sm-4">
                    @Html.LabelFor(e => e.TerminationDate)
                </div>
                <div class="col-xs-8 col-sm-8">
                    @Model.TerminationDate.ToShortDateString()
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4 col-sm-4">
                    @Html.LabelFor(e => e.TerminationReason)
                </div>
                <div class="col-xs-8 col-sm-8">
                    @Model.TerminationReason
                </div>
            </div>
        }

    </div>    
</div>

<div class="pad-top">
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-lg margin-right">
        <span class="glyphicon glyphicon-edit"></span> Edit
    </a>
    @if (Model.Active)
    {
        @:<a href="@Url.Action("Terminate", new { id = Model.Id })" class="btn btn-warning btn-lg margin-right">
        @:<span class="glyphicon glyphicon-remove"></span> Terminate</a>
    }
    else
    {
        @:<a href="@Url.Action("Reactivate", new { id = Model.Id })" class="btn btn-warning btn-lg margin-right">
        @:<span class="glyphicon glyphicon-repeat"></span> Reactivate</a>
    }


    <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger btn-lg margin-right">
        <span class="glyphicon glyphicon-trash"></span> Delete
    </a>    
    <a href="@Url.Action("Index")" class="btn btn-default btn-lg">
        <span class="glyphicon glyphicon-step-backward"></span> Back
    </a>
</div>