@model Appraisr.Models.Employee
@{
    ViewBag.Title = "Delete Employee";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-danger">
    Are you sure you want to delete the employee @Model.FirstName @Model.LastName? This will permanently remove them from the database. 
</div>
@using (Html.BeginForm())
{
    <div class="pad-top">
        <button type="submit" class="btn btn-primary btn-lg margin-right">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </button>
        <a href="@Url.Action("Detail", new { id = Model.Id })" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-remove"></span> Cancel
        </a>
    </div>
}