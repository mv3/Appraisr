@model Appraisr.ViewModels.EmployeeViewModels.EmployeesBaseViewModel


    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(e => e.Employee.FirstName, new { @class = "control-label" })
            @Html.TextBoxFor(e => e.Employee.FirstName, new { @class = "form-control" })           
            @Html.ValidationMessageFor(e => e.Employee.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Employee.LastName, new { @class = "control-label" })
            @Html.TextBoxFor(e => e.Employee.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.Employee.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Employee.PhoneCell, new { @class = "control-label" })
            @Html.TextBoxFor(e => e.Employee.PhoneCell, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.Employee.PhoneCell)
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Employee.PhoneExt, new { @class = "control-label" })
            @Html.TextBoxFor(e => e.Employee.PhoneExt, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.Employee.PhoneExt)
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Employee.Email, new { @class = "control-label" })
            @Html.TextBoxFor(e => e.Employee.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.Employee.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Employee.HireDate, new { @class = "control-label" })
            @Html.TextBoxFor(e => e.Employee.HireDate, "{0:d}", new { @class = "form-control datepicker" })
            @Html.ValidationMessageFor(e => e.Employee.HireDate)
        </div>        
        <div class="form-group">
            @Html.LabelFor(e => e.Employee.OfficeId, new { @class = "control-label" })
            @Html.DropDownListFor(e => e.Employee.OfficeId,
            Model.OfficesSelectListItems, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.Employee.OfficeId)
        </div>
    </div>

@Html.HiddenFor(e => e.Employee.Active)
@Html.HiddenFor(e => e.Employee.TerminationDate)
@Html.HiddenFor(e => e.Employee.TerminationReason)
@Html.HiddenFor(e => e.Employee.Role)



