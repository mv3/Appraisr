@model Appraisr.Models.Office

@{
    ViewBag.Title = "Office Detail";
}

@Html.Partial("_Message")
@Html.Partial("_Warning")


<h2>@Model.OfficeName</h2>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(o => o.Address)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Address
            </div>
        </div> 
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(o => o.City)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.City
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(o => o.Zip)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Zip
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(o => o.Phone)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Phone
            </div>
        </div>       
    </div>
</div>

