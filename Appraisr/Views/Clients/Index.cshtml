@model List<Appraisr.Models.Client>
@{
    ViewBag.Title = "Clients";
}

@Html.Partial("_Message")


<h2>@ViewBag.Title</h2>

<div class="pull-right">
    <a href="@Url.Action("Add")" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon-plus"></span> Add Client
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Client</th>
            <th>Type</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td><a href="@Url.Action("Detail", new { id = client.Id })"> @client.Name</a></td>
                <td>@client.Type</td>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Detail", new { id = client.Id })" class="btn btn-info btn-xs margin-right">
                            <span class="glyphicon glyphicon-info-sign"></span><span class="hidden-xs"> Detail</span>
                        </a>
                        <a href="@Url.Action("Edit", new { id = client.Id })" class="btn btn-primary btn-xs margin-right">
                            <span class="glyphicon glyphicon-edit"></span><span class="hidden-xs"> Edit</span>
                        </a>
                        <a href="@Url.Action("Delete", new { id = client.Id })" class="btn btn-danger btn-xs margin-right">
                            <span class="glyphicon glyphicon-trash"></span><span class="hidden-xs"> Delete</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

